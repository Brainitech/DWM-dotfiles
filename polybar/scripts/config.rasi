* {
    background-color:      #2f343f;
    border-color:          White;
    text-color:           #f3f4f5;
}

configuration {
}

#window {
    anchor:     east;
    location:   east;
    y-offset:   -25%;
    width:      20%;
    height:     40%;
    padding:    4px;
    children:   [ vertibox ];

}

 textbox-prompt-colon {                                                
     text-color: inherit;                                              
     expand: false;                                                    
     margin: 0 0.3em 0em 0em;                                          
     str: ":";
 }


#vertibox {
    orientation: vertical;
    children:   [ prompt, textbox-prompt-colon,entry, listview ];
}

#listview {
    layout:     vertical;
    spacing:    5px;
    lines:      100;
}

#entry {
    expand:     false;
    width:      10em;
}

#element {
    padding: 0px 2px;
    color: #676E8D;
}
#element selected {
    color: #f3f4f5;

}
